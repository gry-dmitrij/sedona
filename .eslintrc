{
    "extends": "eslint:recommended",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "no-console": 0,
        "indent": ["error", "tab"],
        "quotes": ["error", "single"],
        "no-unused-vars": ["warn",
          {
            "vars": "local",
            "args": "after-used"
          }]
    }
}
